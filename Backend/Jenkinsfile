pipeline {
    agent any
    options {
        timestamps() // Optional: Adds timestamps to your pipeline stages
    }

    jobs {
        job('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/nisharathod231/Kalopsia.git'
            }
        }
        job('Backend Build & Test') {
            successThreshold(unstableWins: true)
            stages {
                stage('Build Backend') {
                    steps {
                        script {
                            dir('Backend') {
                                sh 'mvn clean install'
                            }
                        }
                    }
                }

                stage('Run Tests') {
                    steps {
                        script {
                            dir('Backend') {
                                sh 'mvn test'
                            }
                        }
                    }
                }
            }
        }
    }
}
